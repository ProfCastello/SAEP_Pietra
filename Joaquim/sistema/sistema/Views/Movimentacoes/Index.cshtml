@model IEnumerable<sistema.Models.Movimentacao>

@{
    ViewData["Title"] = "Movimentações";
    var alerta = TempData["Alerta"] as string;
}

<h1>Movimentações do estoque</h1>

@if (!String.IsNullOrEmpty(alerta))
{
    <div class="alert alert-warning"> @alerta </div>
}
<p class="btn btn-primary">
    <a asp-action="Create" class="text-light text-decoration-none">Adicionar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MovimentacaoId" class="btn btn-secondary text-light">Detalhes</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
