@model IEnumerable<sistema.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p class="btn btn-primary">
    <a asp-action="Create" class="text-light text-decoration-none">Adicionar</a>
</p>
<form asp-controller="Produtos" asp-action="Buscar" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por nome, marca ou categoria..." value="@ViewData["campoBusca"]" />
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspTecnicas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueAtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoCusto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fabricante)
                </td>
                <td>
                    Visualize em Detalhes
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstoqueAtual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstoqueMinimo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoCusto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoVenda)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ProdutoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProdutoId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
