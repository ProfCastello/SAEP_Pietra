@model Sistema.Models.Material

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especificacao" class="control-label"></label>
                <input asp-for="Especificacao" class="form-control" />
                <span asp-validation-for="Especificacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Unidade" class="control-label"></label>
                <select asp-for="Unidade" class="form-control">
                    <option value="">Selecione uma unidade...</option>
                    <option value="K">Kilo</option>
                    <option value="L">Litros</option>
                    <option value="M">Metros</option>
                </select>
                <span asp-validation-for="Unidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vencimento" class="control-label"></label>
                <select asp-for="Vencimento" class="form-control">
                    <option value="">Selecione uma opção...</option>
                    <option value="P">Possui</option>
                    <option value="N">Não Possui</option>
                </select>
                <span asp-validation-for="Vencimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EstoqueAtual" class="control-label"></label>
                <input asp-for="EstoqueAtual" class="form-control" />
                <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstoqueMinimo" class="control-label"></label>
                <input asp-for="EstoqueMinimo" class="form-control" />
                <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataValidade" class="control-label"></label>
                <input asp-for="DataValidade" class="form-control" />
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
