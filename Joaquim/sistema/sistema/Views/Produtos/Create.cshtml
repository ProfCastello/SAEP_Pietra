@model sistema.Models.Produto

@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1 class="text-center">Adicionar Produto</h1>

<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspTecnicas" class="control-label"></label>
                <textarea asp-for="EspTecnicas" class="form-control"></textarea>
                <span asp-validation-for="EspTecnicas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstoqueAtual" class="control-label"></label>
                <input asp-for="EstoqueAtual" class="form-control" />
                <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstoqueMinimo" class="control-label"></label>
                <input asp-for="EstoqueMinimo" class="form-control" />
                <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoCusto" class="control-label"></label>
                <input asp-for="PrecoCusto" class="form-control" />
                <span asp-validation-for="PrecoCusto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoVenda" class="control-label"></label>
                <input asp-for="PrecoVenda" class="form-control" />
                <span asp-validation-for="PrecoVenda" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 ">
                <input type="submit" value="Adicionar" class="btn btn-primary " />
                <a asp-action="Index" class="btn btn-secondary text-light text-decoration-none">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
